generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  PROVEEDOR
  ADMINISTRADOR
  CLIENTE
}

model User {
  id          String   @id @default(uuid())
  nombre      String
  apellido    String
  telefono    String
  direccion   String
  dni         String   @unique
  correo      String   @unique
  contrasenia String
  role        Role
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
